{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<div class="col-md-6">
{{ form_start(form) }}
{{ form_widget(form) }}
{{ form_end(form) }}
<!-- alert success -->
   {% if app.session.flashBag.has('success') %}
 <div class="alert alert-success alert-dismissable">
   <a class="close" data-dismiss="alert" aria-label="close">×</a>
     {% for msg in app.session.flashBag.get('success') %}
         {{ msg }}
     {% endfor %}
 </div>
 <!-- alert insuccess -->
 {% elseif app.session.flashBag.has('notsuccess') %}
 <div class="alert alert-danger alert-dismissable">
   <a class="close" data-dismiss="alert" aria-label="close">×</a>
    {% for msg in app.session.flashBag.get('notsuccess') %}
        {{ msg }}
    {% endfor %}
  </div>
{% endif %}
<!-- end alert -->
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">id</th>
      <th scope="col">nome</th>
      <th scope="col">citta</th>
      <th scope="col">sale</th>
      <th scope="col">action</th>
    </tr>
  </thead>
  <tbody>
    {% for c in cinemaviews %}
    <tr>
      <th scope="row">{{c.id}}</th>
      <td>{{c.nome}}</td>
      <td>{{c.citta}}</td>
      <td>{{c.sale}}</td>
      <td><a class="btn btn-primary" href="{{ path('edit', { id: c.id }) }}"><i class="fas fa-edit"></i></a>&nbsp;
        <a class="btn btn-primary" href="{{ path('delete', { id: c.id }) }}"><i class="far fa-trash-alt"></i></td></a>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
